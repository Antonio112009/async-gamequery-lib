<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%-22t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="MainFile" fileName="logs/main.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%-22t|%-24C{1}] %-5level - %msg%n"/>
        </File>
        <File name="ErrorFile" fileName="logs/error.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="com.ribasco.rglib.DemoClient" level="debug"/>
        <Logger name="com.ribasco.rglib.protocols" level="info"/>
        <Logger name="com.ribasco.rglib.core" level="info"/>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="MainFile"/>
        </Root>
    </Loggers>
</Configuration>